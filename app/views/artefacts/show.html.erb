<p id="notice"><%= notice %></p>

<div class="row">

<div class="col-lg-12">
  <h1 class="page-header"><%= @artefact.name %> | <%= link_to 'Edit', edit_artefact_path(@artefact) %> |
<%= link_to 'Back', artefacts_path %></h1>
</div>



<p>
  <strong>Description:</strong>
  <%= @artefact.description %>
</p>


  <div class="col-lg-12">
    <h1 class="page-header">Artefact Images</h1>
  </div>

<% @artefact.images.each do |image| %>
  <div class="col-lg-3 col-md-4 col-xs-6 thumb artefact-image">
    <%= link_to image_tag(image.image.url(:medium), class: "img-responsive", height: "50px"), image.image.url(:original), class: "thumbnail" %>
  </div>
<% end %>
