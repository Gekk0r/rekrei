.section.nopadding
  #map

- content_for :scripts do
  %script{:src => "//maps.google.com/maps/api/js?key=AIzaSyC0DOiTq9RckijTomflJYks-WVGBRImyYE&libraries=geometry", :type => "text/javascript"}
  :coffeescript
    handler = Gmaps.build('Google')
    handler.buildMap {
      provider: {}
      internal: id: 'map'
    }, ->
      markers = handler.addMarkers(#{raw @hash.to_json})
      handler.bounds.extendWith markers
      handler.fitMapToBounds()
      return
