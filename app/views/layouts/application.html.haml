%html{:lang => "en", :style => "height:100%;"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "Rekrei is a project that seeks to restore lost cultural heritage through crowd-sourced photogrammetric reconstructions.", :name => "description"}
    %meta{:content => "rekrei, heritage, lost heritage, reconstruction, patrimony, recovery, virtual, digital cultural heritage", :name => "keywords"}
    %title= @title || "Rekrei"
    = favicon_link_tag 'favicon.ico'
    = favicon_link_tag 'rekrei.icns', rel: 'apple-touch-icon'
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    %link{:href => "//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700", :rel => "stylesheet"}
    %link{:href => "//fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic", :rel => "stylesheet"}
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    / [if gt IE 9]><!
    = javascript_include_tag "html5shiv"
    = javascript_include_tag "respond.min"
    / <![endif]
    = yield(:head)
  %body{"data-spy" => "scroll", "data-target" => "nav", "ng-app" => "Rekrei"}
    #wrap
      %header
        = render 'layouts/navigation'
      .row
        .col-sm-6.col-sm-offset-3.text-center
          = render 'layouts/messages'
      = yield
      = render 'layouts/footer'
      = yield :scripts
